@model blog.Models.BlogEntry

@{
    ViewData["Title"] = "New blog entry";
}
<div class="row mt-3">
    <div class="text-center">
        <h3>Create blog entry</h3>
    </div>
    <div class="text-center text-success">
        @TempData["Information"]
    </div>
    <div class="text-center text-danger">
        @TempData["Error"]
    </div>
    @using (Html.BeginForm("Create", "BlogEntry", FormMethod.Post, new { @class = "needs-validation" }))
    {
        <input type="hidden" name="BlogId" value="@Model.BlogId">

        <div class="form-group col-md-10 mb-1 mx-auto">
            <label for="titleInput" class="mb-2">Title</label>
            @Html.TextBoxFor(m => m.Title, new { @id = "titleInput", @class = "form-control"})
        </div>
        <div class="text-center text-danger mb-3">
            @Html.ValidationMessageFor(m => m.Title, "")
        </div>
        <div class="form-group col-md-10 mb-1 mx-auto">
            <label for="contentInput" class="mb-2">Content</label>
            @Html.TextAreaFor(m => m.Content, new { @id = "contentInput", @class = "form-control", @rows = 20})
        </div>
        <div class="text-center text-danger mb-3">
            @Html.ValidationMessageFor(m => m.Content, "")
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    }
</div>