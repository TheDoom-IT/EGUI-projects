@model blog.Models.User

@{
    ViewData["Title"] = "Login";
}

<div class="row mt-3">
    <div class="text-center">
        <h3>Login</h3>
    </div>
    <div class="text-center text-success">
        @TempData["Information"]
    </div>
    <div class="text-center text-danger">
        @TempData["Error"]
    </div>
    @using (Html.BeginForm("LogIn", "Login", FormMethod.Post, new { @class = "needs-validation" }))
    {
        <div class="form-group col-md-6 mb-1 mx-auto">
            <label for="loginInput" class="mb-2">Login</label>
            @Html.TextBoxFor(m => m.Login, new { @id = "loginInput", @class = "form-control"})
        </div>
        <div class="text-center text-danger mb-3">
            @Html.ValidationMessageFor(m => m.Login, "")
        </div>
        <div class="form-group col-md-6 mb-1 mx-auto">
            <label for="passwordInput" class="mb-2">Password</label>
            @Html.TextBoxFor(m => m.Password, new { @type = "password", @id = "passwordInput", @class = "form-control"})
        </div>
        <div class="text-center text-danger mb-3">
            @Html.ValidationMessageFor(m => m.Password, "")
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary">Sign In</button>
        </div>
    }

    <div class="text-center mt-2">
        <p>Don't have an account? Register <a asp-area="" asp-controller="Login" asp-action="Register">here</a>.</p>
    </div>
</div>
