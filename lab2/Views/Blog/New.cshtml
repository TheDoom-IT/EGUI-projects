@model blog.Models.Blog

@{
    ViewData["Title"] = "New blog";
}

<div class="row mt-3">
    <div class="text-center">
        <h3>Create blog</h3>
    </div>
    <div class="text-center text-success">
        @TempData["Information"]
    </div>
    <div class="text-center text-danger">
        @TempData["Error"]
    </div>
    @using (Html.BeginForm("Create", "Blog", FormMethod.Post, new { @class = "needs-validation" }))
    {
        <div class="form-group col-md-6 mb-1 mx-auto">
            <label for="titleInput" class="mb-2">Title</label>
            @Html.TextBoxFor(m => m.Title, new { @id = "titleInput", @class = "form-control"})
        </div>
        <div class="text-center text-danger mb-3">
            @Html.ValidationMessageFor(m => m.Title, "")
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    }
</div>
